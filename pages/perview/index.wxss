.scroll-view-list {
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 10rpx; /* 设置间距 */
}

.scroll-view-list .list-item {
  display: inline-block;
  width: 19vw;
  height: 19vw;
  box-sizing: border-box;
  overflow: hidden;
  margin: 0 0.5vw;
}
.list-item .list-item-image {
  width: 100%;
  height: 100%;
}