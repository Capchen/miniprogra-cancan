.login-page {
  width: 100vw;
  height: 100vh;
  display: flex;
  background-color: #F8F8EC;
  position: relative;
  /* background-image: url('https://pub-af92a95c8fa548e9ba1d0af90192aab9.r2.dev/login-bg.png'); */
  background-size: 100%;
  background-position: 100%;
}
.lottie-action {
  position: absolute;
  z-index: 10;
  top: calc(20vh - 180rpx);
  left: 30rpx;
  width: 200rpx;
  height: 200rpx
}
.login-container {
  width: 90%;
  background-color: #A3BFA7;
  border-radius: 32rpx;
  padding: 30rpx;
  box-sizing: border-box;
  position: absolute;
  top: 20vh;
  left: 50%;
  transform: translate(-50%);
}

.login-container .login-item {
  --td-input-bg-color: #F8F8EC;
  --td-input-border-color: #E2C651;
  --td-input-default-text-color: #79976B;
  --td-input-placeholder-text-color: #79976B;
  display: flex;
  align-items: center;
  border-radius: 32rpx;
  background-color: #F8F8EC;
  box-sizing: border-box;
  padding: 0 20rpx;
  gap: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.login-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 32rpx;
  background-color: #79976B;
  opacity: 0.8;
  color: #F8F8EC;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-top: 20rpx;
}

.footer-image {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: 350rpx;
  background-color: #F8F8EC;
  font-size: 0;
  display: inline-block;
}